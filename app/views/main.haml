!!!
%html{html_attrs()}
  %head
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/themes/Miner.min.css" />
    <link rel="stylesheet" href="/themes/jquery.mobile.structure-1.2.0.min.css" />
    <link rel="stylesheet" href="css/game.less" />
    <script src="third-party-js/jquery-2.1.3.min.js"></script>
    <script src="third-party-js/jquery.mobile-1.2.0.min.js"></script>
    %script(type="text/javascript" src="third-party-js/lodash.min.js")
    %script(type="text/javascript" src="third-party-js/backbone-min.js")
    %script(type="text/javascript" src="miner-generated.js")

  %body
    #game
      .left-pane.pane
      .pane(style="width: 650px;")
        .world
      .right-pane.pane
        .row
          .label day 
          .value.day
        .row
          .label money
          .value.money
        .row
          .label morale
          .value.morale
        .row
          .label wage
          .value.wages
        .row
          .label ore
          .value.ore
            %span.ore-ticker
            %button.sell-ore Sell

        .build-panel
          %select
            %option(value="-1") Build some shit
            %option(value="0") Bulldozer
            %option(value="1") Mine
            %option(value="7") Tube

        %button.advance-to-next-day See what tomorrow brings


    -##settings(data-role="page")
      %div(data-role="header")
        %a(data-rel="back" data-role="button") Back
        %h1 Settings
      %div(data-role="content")
        %label{:for => "slider1"} Input slider:
        %input#slider1{"data-theme" => "a", :max => "100", :min => "0", :name => "slider1", :type => "range", :value => "50"}/
        %br/
        %fieldset{"data-role" => "controlgroup", "data-type" => "horizontal"}
          %legend Choose a pet:
          %input#radio-choice-1{:checked => "checked", :name => "radio-choice", :type => "radio", :value => "choice-1"}/
          %label{:for => "radio-choice-1"} Cat
          %input#radio-choice-2{:name => "radio-choice", :type => "radio", :value => "choice-2"}/
          %label{:for => "radio-choice-2"} Dog
          %input#radio-choice-3{:name => "radio-choice", :type => "radio", :value => "choice-3"}/
          %label{:for => "radio-choice-3"} Hamster
          %input#radio-choice-4{:name => "radio-choice", :type => "radio", :value => "choice-4"}/
          %label{:for => "radio-choice-4"} Lizard
